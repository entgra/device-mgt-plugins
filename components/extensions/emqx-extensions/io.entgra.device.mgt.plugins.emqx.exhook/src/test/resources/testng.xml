<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="EMQX ExHook Topic Match Tests" verbose="1">
    <test name="TopicMatchTests" preserve-order="true">
        <classes>
            <class name="io.entgra.device.mgt.plugins.emqx.exhook.TopicMatchTest">
                <methods>
                    <!-- Test Case 1: Exact matches -->
                    <include name="testExactMatches"/>

                    <!-- Test Case 2-3: Single-level wildcard matching (+ symbol) -->
                    <include name="testSingleLevelWildcardValid"/>
                    <include name="testSingleLevelWildcardInvalid"/>

                    <!-- Test Case 4-5: Multi-level wildcard in scope pattern (# symbol) -->
                    <include name="testMultiLevelWildcardInScopeValid"/>
                    <include name="testMultiLevelWildcardInScopeInvalid"/>

                    <!-- Test Case 6-7: Multi-level wildcard in subscription requests -->
                    <include name="testMultiLevelWildcardInTopicValid"/>
                    <include name="testMultiLevelWildcardInTopicInvalid"/>

                    <!-- Test Case 8: Backward compatibility - strict wildcard validation -->
                    <include name="testBackwardCompatibilityInvalid"/>

                    <!-- Test Case 9: Complex mixed scenarios -->
                    <include name="testComplexMixedScenarios"/>

                    <!-- Test Case 11: Performance and scalability tests -->
                    <include name="testLargeTopicStrings"/>

                    <!-- Test Case 12: Error handling and edge cases -->
                    <include name="testNullScopeInput"/>
                    <include name="testNullTopicInput"/>
                    <include name="testBothNullInputs"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>